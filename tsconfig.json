{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest-setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
